<h1>Article details</h1>

<pre>
<strong>Title      : </strong><%=@article.title%>
<strong>Description: </strong><%=@article.description%>
</pre>

<% if current_user.nil? == false and (current_user.id == 1  or @article.user_id==current_user.id)%>
    <%= link_to "Edit this article", edit_article_path %>
    <%= link_to "Delete", article_path(@article), method: :delete, data:{turbo_method: :delete} %>
<% end %>
<% if current_user.nil? == false %>
    <%= link_to "Create new article", new_article_path%><br>
    <%= link_to "Back to user page", user_path(current_user) %>
<% else%>
    <%= link_to "Back to articles listing", articles_path%>
<% end %>