<div class = "navigation">
<ul>
    <li style="float:left"><%= button_to "Homepage", root_path, method: "get" %></li>
    <% if session[:user_id] != nil %>
        <li style="float:left"><%= button_to "Create a new article", new_article_path, method: "get" %></li>
    <% else %>
        <li style="float:left"><%= button_to "Create a new article", new_article_path, disabled: true %></li>
    <% end %>
    <li style="float:left"><%= button_to "View all articles", articles_path, method: "get" %></li>
    <% if session[:user_id] != nil %>
        <li style="float:right"><%= button_to "Log out", logout_path, method: :delete, data:{turbo_method: :delete} %></li>
        <div id = "user_name">
            <li style="float:left"><%= link_to current_user.username, user_path(current_user) %></li>
        </div>
    <% else %>
        <li style="float:right"><%= button_to "Log in", login_path, method: "get" %></li>
        <li style="float:right"><%= button_to "Sign up", signup_path, method: "get" %></li>
    <% end %>

</ul>
</div>